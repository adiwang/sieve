public:
	uint32_t _result;
    int _samples_count;
	std::string _marshal_data;

public:
	enum
	{
		PROTOCOL_ID = PROTOCOL_ID_SREGISTERCLIENTREP,
	};
	SRegisterClientRep() : _result(0), _samples_count(0) {}
	SRegisterClientRep(uint32_t result, int samples_count) : _result(result), _samples_count(samples_count) {}
	~SRegisterClientRep() {}

	virtual const std::string& Marshal()
	{
		// 1. 设置协议具体子段
		SRegisterClientRepProto proto;
		proto.set_result(_result);
        proto.set_samples_count(_samples_count);
		// 2. 给协议wrap一层，添加protocol id
		CProto cproto;
		cproto.set_id(PROTOCOL_ID);
		cproto.set_body(proto.SerializeAsString());
		std::string data;
		cproto.SerializeToString(&data);
		// 3. 封包
		NetPacket packet;
		packet.header = 0xF0;
		packet.tail = 0x0F;
		packet.type = 1;
		packet.datalen = data.size();
		_marshal_data = PacketData(packet, data.c_str());
		return _marshal_data;
	}

	virtual void UnMarshal(const char* buf, int length)
	{
		SRegisterClientRepProto proto;
		proto.ParseFromString(std::string(buf, length));
		_result = proto.result();
        _samples_count = proto.samples_count();
	}

    virtual Protocol* Clone()
    {
        return new SRegisterClientRep();
    }
